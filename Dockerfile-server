FROM python:3.10-slim AS downloader

WORKDIR /app

RUN curl -fL --progress-bar https://modelscope.cn/models/iic/SenseVoiceSmall/resolve/master/model.pt -o /app/model.pt

# Phase 1: Building Python dependencies
FROM python:3.10-slim AS builder

WORKDIR /app

# Configure pip with set timeout and retry
RUN pip config set global.timeout 120 && \
    pip config set install.retries 5

COPY main/xiaozhi-server/requirements.txt .

# Install Python dependencies with parallel downloads
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt --default-timeout=120 --retries 5

# Phase 2: Production image
FROM python:3.10-slim

WORKDIR /opt/xiaozhi-esp32-server

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends libopus0 ffmpeg && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copy Python packages and frontend build artifacts from builder stage
COPY --from=builder /usr/local/lib/python3.10/site-packages /usr/local/lib/python3.10/site-packages
COPY --from=builder /usr/local/bin/mcp-proxy /usr/local/bin/mcp-proxy
COPY --from=downloader /app/model.pt /opt/xiaozhi-esp32-server/models/SenseVoiceSmall/model.pt

# Copy application code
COPY main/xiaozhi-server .

# Start the application
CMD ["python", "app.py"]
